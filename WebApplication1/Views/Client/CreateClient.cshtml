        @model WebApplication1.Models.Client
        @{
            Layout = "~/Views/Shared/_Layout.cshtml";
        }

        <script type="text/javascript">
            function checkForm() {

                var regex = new RegExp("^([0-9]{4}.[0-9]{6})$");
                var regexdate = new RegExp("^(0[1-9]|[12][0-9]|3[01])[- /.](0[1-9]|1[012])[- /.]((19|20)\\d\\d)$");
                var name = $('#Name').val();
                var date = $('#DateBirth').val();
                var gender = $('#Gender').val();
                var phone = $('#Phone').val();
                var passport = $('#passportID').val();

                var submitButton = $('#submitButton');

                if ((name == "") || (date == "") || (gender == "") || (passport == "") || (phone == "") || (regex.test(passport) == false) || (regexdate.test(date) == false)) {
                    submitButton.prop('disabled', true);
                }
                else {
                    submitButton.prop('disabled', false);

                }
            }</script>

        <table width="100%" cellspacing="4" cellpadding="4">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true);
                <tr>
                    <td align="right" width="100">
                        <h2>Добавить клиента</h2>
                    </td>
                </tr>
                <tr>
                    <td> @Html.LabelFor(model => model.Name, "ФИО")</td>
                    <td> @Html.EditorFor(model => model.Name, new { htmlAttributes = new { onchange = "checkForm()" } })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.DateBirth, "Дата рождения")</td>
                    <td>@Html.EditorFor(model => model.DateBirth, new { htmlAttributes = new { onchange = "checkForm()" } })</td>
                </tr>
                <tr>
                    <td></td>
                    <td>Введите дату в формате дд/мм/гггг</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Gender, "Пол")</td>
                    <td>@Html.EditorFor(model => model.Gender, new { htmlAttributes = new { onchange = "checkForm()" } })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.passportID, "Паспортные данные")</td>
                    <td>@Html.EditorFor(model => model.passportID, new { htmlAttributes = new { onchange = "checkForm()" } })</td>
                </tr>
                <tr>
                    <td></td>
                    <td>Введите данные в формате 1234.123456</td>
                </tr>

                <tr>
